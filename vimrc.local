imap jj <Esc>

" Shortcut to rapidly toggle `set list`
nmap <leader>l :set list!<CR>
" Use the same symbols as TextMate for tabstops and EOLs
set listchars=tab:▸\ ,eol:¬

nnoremap <leader>g :GundoToggle<CR>

set norelativenumber
set nonumber

" autocomplete for command mode
set wildmenu
set wildmode=full " default

" mappings

" NERDTree configuration
let NERDTreeIgnore=['\.pyc$', '\.rbc$', '\~$']
map <Leader>n :NERDTreeToggle<CR>

" Command-T configuration
let g:CommandTMaxHeight=20

" vim-powerline
let g:Powerline_symbols = 'fancy'

" ZoomWin configuration
map <Leader><Leader> :ZoomWin<CR>

" Opens an edit command with the path of the currently edited file filled in
" Normal mode: <Leader>e
map <Leader>e :e <C-R>=expand("%:p:h") . "/" <CR>

" Opens a tab edit command with the path of the currently edited file filled in
" Normal mode: <Leader>t
map <Leader>te :tabe <C-R>=expand("%:p:h") . "/" <CR>

" Inserts the path of the currently edited file into a command
" Command mode: Ctrl+P
cmap <C-P> <C-R>=expand("%:p:h") . "/" <CR>

"  markdown
imap <leader>p <ESC>:w!<CR>:!markdown % < %.html && open %.html<CR><CR>a
map  <leader>p <ESC>:w!<CR>:!markdown % < %.html && open %.html<CR><CR>a

" pasting
set pastetoggle=<leader>sp

" groovy syntax for gradle
au BufNewFile,BufRead *.groovy,*.gradle setf groovy

"""""""""""""""""""""""""""PYTHON"""""""""""""""""""""""""""
au FileType python set omnifunc=pythoncomplete#Complete
au FileType python set autoindent foldmethod=indent

"""""""""""""""""""""""""""COFFEESCRIPT"""""""""""""""""""""""""""
au FileType coffee setlocal shiftwidth=2
au FileType coffee setlocal tabstop=2
"""""""""""""""""""""""""""YAML"""""""""""""""""""""""""""
au FileType yaml setlocal shiftwidth=2
au FileType yaml setlocal tabstop=2
