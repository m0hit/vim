set norelativenumber
set nonumber
set scrolloff=10  " always keep cursor 10 lines from end of screen

" autocomplete for command mode
set wildmenu
set wildmode=full " default

" disable git gutter by default
let g:gitgutter_enabled = 1

" airline-powerline
let g:airline_powerline_fonts = 1
let g:airline_section_b = 

" vim python-mode
let g:pymode_lint_ignore = 'E111'
let g:pymode_folding = 0

" gist github
let g:gist_show_privates = 1
let g:gist_post_private = 1
